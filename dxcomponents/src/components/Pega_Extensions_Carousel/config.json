{
  "name": "Pega_Extensions_Carousel",
  "label": "Image Carousel",
  "description": "An image carousel widget with auto-play, navigation controls, and hover pause functionality",
  "organization": "Pega",
  "version": "1.0.0",
  "library": "Extensions",
  "allowedApplications": [],
  "componentKey": "Pega_Extensions_Carousel",
  "type": "Field",
  "subtype": "Text",
  "properties": [
    {
      "name": "images",
      "label": "Image URLs (comma-separated)",
      "format": "TEXT",
      "description": "Enter image URLs separated by commas. Example: url1,url2,url3"
    },
    {
      "name": "autoPlay",
      "label": "Auto Play",
      "format": "BOOLEAN",
      "defaultValue": true
    },
    {
      "name": "interval",
      "label": "Auto Play Interval (milliseconds)",
      "format": "NUMBER",
      "defaultValue": 5000
    },
    {
      "name": "visibility",
      "label": "Visible",
      "format": "VISIBILITY"
    },
    {
      "label": "Advanced",
      "format": "GROUP",
      "collapsible": true,
      "properties": [
        {
          "name": "testId",
          "label": "Test ID",
          "format": "TEXT",
          "ignorePattern": "[^-_\\p{N}\\p{L}]",
          "includeAnnotations": false
        }
      ]
    }
  ],
  "defaultConfig": {
    "detailFVLItem": true,
    "isFormWidth" : false,
    "isContainerWidth" : false
  }
}
